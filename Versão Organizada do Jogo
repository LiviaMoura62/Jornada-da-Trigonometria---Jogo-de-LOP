function BotaoMenu(t√≠tulo, yMin, yMax, Op√ßaoTela, i) {
  if (mouseX > xMinBotao && mouseX < xMaxBotao && mouseY > yMin && mouseY < yMax) {
    fill(126, 249, 255);
    if (mouseIsPressed) {
      tela = Op√ßaoTela;
    }
  } else {
    fill(129, 216, 208);
  }
  rect(xMinBotao, yMin, LargBotao, AltBotao, 20);
  textSize(30);
  fill(0)
  text(t√≠tulo, xMinBotao + letraX[i], yMin + 38);
}

function BotaoRetornar(yMinBotaoRetornar, yMaxBotaoRetornar, Op√ßaoTela) {
  if (mouseX > xMinBotaoRetornar && mouseX < xMaxBotaoRetornar && mouseY > yMinBotaoRetornar && mouseY < yMaxBotaoRetornar) {
    fill(126, 249, 255);
    if (mouseIsPressed) {
      tela = Op√ßaoTela;
    }
  } else {
    fill(129, 216, 208);
  }
  rect(xMinBotaoRetornar, yMinBotaoRetornar, LargBotaoRetornar, AltBotaoRetornar, 10);
  image(ImagemSeta, 440, 440);
  fill(0);
}

